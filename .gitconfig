[user]
    name = Antti Holvikari
    email = anttih@gmail.com
[diff]
    renamelimit = 4000
[color]
    ui = auto
    status = auto
    diff = auto
    branch = auto
[alias]
    amend = commit --amend
    s = status
    b = branch
    c = commit -v
    cm = commit -m
    co = checkout
    a = add
    ai = add --interactive
    aa = add --all
    dc = diff --cached
    l = log --graph --abbrev-commit --date=relative
    r = !git l -20
[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[core]
    excludesfile = ~/.gitignore
